<!DOCTYPE html>
<html lang="pt-br">
    <%- include("./include/head.ejs", {title:"Jogos"}) -%>
    <body>

        <main class="container">
            <div class="row row-cols-1 row-cols-md-3">
                <% for(let i = 0; i < listaJogos.length; i++) { %>
                    <div class="col mb-4">
                        <div class="card">
                            <img src="..." class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= listaJogos[i].nome %> 
                                </h5>
                                <p class="card-text">
                                    <%= listaJogos[i].preco %>
                                </p>
                            </div>
                            <form action="/games/excluir/<%= i %>?_method=DELETE" method="post">
                                <button type="submit" class="btn btn-danger">Excluir</button>
                            </form>
                            
                            <form action="/games/editar/<%= i %>" method="get">
                                <button type="submit" class="btn btn-warning">Editar</button>
                            </form>
                        </div>
                    </div>
                <% } %>   
            </div>
        </main>
        
        <%- include("./include/scripts.ejs") -%>
    </body>
</html>